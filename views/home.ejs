<%- include('partials/header'); -%>

<% posts.forEach(function (post) { %>
    <h1><%= post.title %></h1>
    <% if(post.content > 100) {%>
        <p><%=  post.content %></p>
    <% }else{  %>
        <p><%=  post.content.substr(0,100)+"..." %><a href="/posts/<%=post.title%>">Read More</a></p>
    <% }  %>
    
<% } );%>

<%- include('partials/footer'); -%>
